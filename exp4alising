%With alising
clc;
x = [1 2 3];
h = [1 1 1 ];
 X = fft(x);
 H = fft(h);

 Y = X.*H;
 y = ifft(Y)




%without alising
l1 = length(x);
 l2 = length(h);
 N = l1 + l2 -1;
 l1_new = N-l1;
 l2_new = N - l2;

 x = [x zeros(1,l1_new)];
 h = [h zeros(1,l2_new)];
 X = fft(x);
 H = fft(h);

 Y = X.*H;
 y = ifft(Y)
